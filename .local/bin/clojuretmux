#!/bin/bash

set -e

function has-session {
  tmux has-session -t 'clojurevim'$PWD 2>/dev/null
}


if has-session ; then
  echo "Session already exists"
else
  currentDir=$PWD

  if [ ! -z "$1" ]; then
    cd $1
  fi

  tmux new-session -d -s 'clojurevim'$PWD 'vim .' #'clojurevim .' 
  tmux split-window -h
  tmux split-window -v
  tmux -2 attach-session 
  
  cd $currentDir
fi
